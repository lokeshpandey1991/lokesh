<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Contact Us"
    sling:resourceType="granite/ui/components/foundation/section">
    <layout
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
        margin="{Boolean}false"/>
    <items jcr:primaryType="nt:unstructured">
        <column
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/container">
            <items jcr:primaryType="nt:unstructured">
                <emailpath
                    cq:showOnCreate="{Boolean}false"
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Email TemplatePath"
                    sling:resourceType="granite/ui/components/foundation/form/fieldset">
                    <items jcr:primaryType="nt:unstructured">
                        <ctaLink
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                            fieldDescription="Configure  Email Template Path"
                            fieldLabel="Email Path"
                            name="./emailPath"
                            rootPath="/content/customerportal"/>
                    </items>
                </emailpath>
                <formType
                    cq:showOnCreate="{Boolean}false"
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Form Type"
                    sling:resourceType="granite/ui/components/foundation/form/fieldset">
                    <items jcr:primaryType="nt:unstructured">
                        <pageType
                            cq:showOnCreate="{Boolean}false"
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Form type"
                            sling:resourceType="granite/ui/components/foundation/form/fieldset">
                            <items jcr:primaryType="nt:unstructured">
                                <pagetitle
                                    cq:showOnCreate="{Boolean}false"
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/select"
                                    cq-msm-lockable="formType"
                                    fieldLabel="Form Type"
                                    name="./formType">
                                    <items jcr:primaryType="nt:unstructured">
                                        <sales
                                            jcr:primaryType="nt:unstructured"
                                            text="Contact-Sales"
                                            value="Contact-Sales"/>
                                        <support
                                            jcr:primaryType="nt:unstructured"
                                            text="Contact-Support"
                                            value="Contact-Support"/>
                                        <training
                                            jcr:primaryType="nt:unstructured"
                                            text="Contact-Training"
                                            value="Contact-Training"/>
                                    </items>
                                </pagetitle>
                            </items>
                        </pageType>
                    </items>
                </formType>
                <eloquaDetails
                    cq:showOnCreate="{Boolean}false"
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Eloqua Details"
                    sling:resourceType="granite/ui/components/foundation/form/fieldset">
                    <items jcr:primaryType="nt:unstructured">
                         <show jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/form/checkbox"
								name="./isEloquaEnabled" text="Enable eloqua tracking"
								value="true" />
						 <showType
						       jcr:primaryType="nt:unstructured"
							   sling:resourceType="granite/ui/components/foundation/form/hidden"
							   name="./isEloquaEnabled@TypeHint"/>	   
                    </items>
                </eloquaDetails> 
            </items>
        </column>
    </items>
</jcr:root>
