<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Hero Media"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem6_2_docs_component_en#Image - Sightly"
    width="800">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <image
                jcr:primaryType="nt:unstructured"
                jcr:title="Roche Asset Details"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <heroMedia
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/fileupload"
                                allowUpload="{Boolean}false"
                                autoStart="{Boolean}false"
                                class="cq-droptarget"
                                fieldDescription="Upload Image or Video Asset"
                                fieldLabel="Roche Dam asset"
                                fileNameParameter="./heroMedia"
                                fileReferenceParameter="./fileReference"
                                mimeTypes="[image,video/.*]"
                                multiple="{Boolean}false"
                                name="./heroMedia"
                                title="Upload Image or Video Asset"
                                uploadUrl="${suffix.path}"
                                useHTML5="{Boolean}true"/>
                            <altText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Provide a textual alternative of the content and function of the image."
                                fieldLabel="Alternative Text"
                                name="./altText"/>
                            <transparentOverlay
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldDescription="Please select if a transparent overlay for the image is required"
                                fieldLabel="Transparent Overlay"
                                name="./transparentOverlay">
                                <items jcr:primaryType="nt:unstructured">
                                    <false
                                        jcr:primaryType="nt:unstructured"
                                        text="False"
                                        value="false"/>
                                    <true
                                        jcr:primaryType="nt:unstructured"
                                        text="True"
                                        value="true"/>
                                </items>
                            </transparentOverlay>
                        </items>
                    </column>
                </items>
            </image>
            <text
                jcr:primaryType="nt:unstructured"
                jcr:title="Text Parameters"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <headline
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Provide the headline text"
                                fieldLabel="Headline text"
                                name="./headline"/>
                            <headlinePosition
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldDescription="Provide a position for the headline"
                                fieldLabel="Headline Position"
                                name="./headlinePosition">
                                <items jcr:primaryType="nt:unstructured">
                                    <topLeft
                                        jcr:primaryType="nt:unstructured"
                                        text="Top left"
                                        value="topLeft"/>
                                    <topCenter
                                        jcr:primaryType="nt:unstructured"
                                        text="Top Center"
                                        value="topCenter"/>
                                    <topRight
                                        jcr:primaryType="nt:unstructured"
                                        text="Top right"
                                        value="topRight"/>
                                    <middleLeft
                                        jcr:primaryType="nt:unstructured"
                                        text="Middle left"
                                        value="middleLeft"/>
                                    <center
                                        jcr:primaryType="nt:unstructured"
                                        text="Center"
                                        value="center"/>
                                    <middleRight
                                        jcr:primaryType="nt:unstructured"
                                        text="Middle right"
                                        value="middleRight"/>
                                    <bottomLeft
                                        jcr:primaryType="nt:unstructured"
                                        text="Bottom left"
                                        value="bottomLeft"/>
                                    <bottomCenter
                                        jcr:primaryType="nt:unstructured"
                                        text="Bottom center"
                                        value="bottomCenter"/>
                                    <bottomRight
                                        jcr:primaryType="nt:unstructured"
                                        text="Bottom right"
                                        value="bottomRight"/>
                                </items>
                            </headlinePosition>
                    
                            <ctaLink
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                fieldDescription="Configure  Call to action link"
                                fieldLabel="CTA Link"
                                name="./ctaLink"
                                rootPath="/content/customerportal"/>
                           
                        </items>
                    </column>
                </items>
            </text>
        </items>
    </content>
</jcr:root>
