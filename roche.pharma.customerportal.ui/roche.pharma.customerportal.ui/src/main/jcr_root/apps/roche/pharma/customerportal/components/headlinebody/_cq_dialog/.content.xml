<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="HeadlineBody Component"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            margin="{Boolean}false"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <details
                jcr:primaryType="nt:unstructured"
                jcr:title="Details"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <headingText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Tip : Define Heading of the Section"
                                fieldLabel="Headline Text"
                                maxlength="{Long}30"
                                name="./headlineText"/>
                            <headingType
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldDescription="Tip : Define Heading Type of the Section"
                                fieldLabel="Heading Type"
                                name="./headlineType">
                                <items jcr:primaryType="nt:unstructured">
                                    <heading1
                                        jcr:primaryType="nt:unstructured"
                                        text="Heading 1"
                                        value="x-h1"/>
                                    <heading2
                                        jcr:primaryType="nt:unstructured"
                                        text="Heading 2"
                                        value="x-h2"/>
                                    <heading3
                                        jcr:primaryType="nt:unstructured"
                                        text="Heading 3"
                                        value="x-h3"/>
                                    <heading4
                                        jcr:primaryType="nt:unstructured"
                                        text="Heading 4"
                                        value="x-h4"/>
                                </items>
                            </headingType>
                            <authorName
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Tip : Mention Author Name for the Section"
                                fieldLabel="Author Name"
                                name="./authorName"/>
                            <publishDate
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/datepicker"
                                displayedFormat="DD.MM.YYYY"
                                fieldDescription="Tip : Select the Date for the Section"
                                fieldLabel="Publication Date"
                                name="./publishDate"
                                type="datetime"/>
                            <tags
                                cq:showOnCreate="{Boolean}true"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/common/tagspicker"
                                allowBulkEdit="{Boolean}true"
                                allowCreate="{Boolean}true"
                                cq-msm-lockable="cq:tags"
                                fieldLabel="Tags"
                                name="./tagsId"
                                renderReadOnly="{Boolean}false"
                                tagsPath="/etc/tags/customerportal"/>
                            <socialMedia
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                fieldDescription="Tip : Select to show Social Media"
                                name="./socialMedia"
                                text="Social Media Required"
                                value="{Boolean}true"/>
                        </items>
                    </column>
                </items>
            </details>
            <rte
                jcr:primaryType="nt:unstructured"
                jcr:title="Body Details"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <bodyText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/include"
                                cq-msm-lockable="jcr:title"
                                fieldLabel="Body text"
                                name="./headlineText"
                                path="/apps/roche/pharma/customerportal/components/richTextEditor/cq:dialog/content/items/rte/items/column/items/bodyText"/>
                        </items>
                    </column>
                </items>
            </rte>
        </items>
    </content>
</jcr:root>
