<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    sling:resourceType="cq/gui/components/authoring/dialog"
    width="{Long}800">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <persona
                jcr:primaryType="nt:unstructured"
                jcr:title="Roche Persona Selector"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <fieldset
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Roche Persona Selector"
                                sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                width="{Long}800">
                                <layout
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <headerText
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                class="cq-droptarget"
                                                fieldLabel="Persona Header Text"
                                                name="./personaHeaderText"/>
                                            <personaList
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/multifield"
                                                class="foundation-layout-util-maximized-alt long-label"
                                                fieldLabel="Persona List"
												max="{Long}3"
                                                width="{Long}800">
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                                   acs-commons-nested="JSON_STORE"
                                                    name="./personaList">
                                                    <layout
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                                        method="absolute"/>
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <column
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/container">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <personaSelectorType
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                                                    class="cq-droptarget"
                                                                    fieldDescription="Enter Persona Type"
                                                                    fieldLabel="Tags"
                                                                    name="./personaSelectorTagType"
                                                                    required="{Boolean}true"
																	rootPath="/etc/tags/customerportal"/>
                                                                <personaSelectorName
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                                    class="cq-droptarget"
                                                                    fieldDescription="Enter Persona Name"
                                                                    fieldLabel="Persona Name"
                                                                    name="./personaSelectorName"
                                                                    required="{Boolean}true"/>
                                                                <personaSelectorDescription
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/form/textarea"
                                                                    class="cq-droptarget"
                                                                    fieldDescription="Enter Persona Description"
                                                                    fieldLabel="Persona Description"
                                                                    name="./personaSelectorDescription"
                                                                    required="{Boolean}true"/>
                                                               
                                                            </items>
                                                        </column>
                                                    </items>
                                                </field>
                                            </personaList>
                                        </items>
                                    </column>
                                </items>
                            </fieldset>
                        </items>
                    </column>
                </items>
            </persona>
        </items>
    </content>
</jcr:root>
