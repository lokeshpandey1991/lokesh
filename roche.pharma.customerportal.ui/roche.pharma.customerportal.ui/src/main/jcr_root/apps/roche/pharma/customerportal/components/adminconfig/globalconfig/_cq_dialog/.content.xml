<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
	xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
	xmlns:nt="http://www.jcp.org/jcr/nt/1.0" jcr:primaryType="nt:unstructured"
	jcr:title="Global configuration" sling:resourceType="cq/gui/components/authoring/dialog">
	<content jcr:primaryType="nt:unstructured"
		sling:resourceType="granite/ui/components/foundation/container">
		<items jcr:primaryType="nt:unstructured">
			<tabs jcr:primaryType="nt:unstructured"
				sling:resourceType="granite/ui/components/foundation/container">
				<layout jcr:primaryType="nt:unstructured"
					sling:resourceType="granite/ui/components/foundation/layouts/tabs"
					type="nav" />
				<items jcr:primaryType="nt:unstructured">
					<globalTab jcr:primaryType="nt:unstructured" jcr:title="Global configuration"
						sling:resourceType="granite/ui/components/foundation/section">
						<layout jcr:primaryType="nt:unstructured"
							sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns" />
						<items jcr:primaryType="nt:unstructured">
							<column jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/container">
								<items jcr:primaryType="nt:unstructured">
									<webPath jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/foundation/form/fieldset">
										<items jcr:primaryType="nt:unstructured">
											<path jcr:primaryType="nt:unstructured"
												sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
												fieldDescription="configure website domain name(For external start with http)"
												fieldLabel="website path" name="./websitePath" rootPath="/content" />
											<elabdoc jcr:primaryType="nt:unstructured"
												sling:resourceType="granite/ui/components/foundation/form/textfield"
												fieldLabel="Elab Document Search URL" name="./elabURL" />
											<googleMapKey jcr:primaryType="nt:unstructured"
												fieldDescription="configure google map key to display map on contact us"
												fieldLabel="Google Map Key" name="./googleMapKey"
												sling:resourceType="granite/ui/components/foundation/form/textfield" />
											<disableCaptcha
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                                name="./isCaptchaDisabled"
                                                text="Disable Captcha"
                                                value="true"/>
                                            <disableCaptchaType
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                                name="./isCaptchaDisabled@TypeHint"
                                                value="Boolean"/>
                                            <enableDTL
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                                name="./isDTLEnabled"
                                                text="Enable product data from DTL"
                                                value="true"/>
                                            <enableDTLType
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                                name="./isDTLEnabled@TypeHint"
                                                value="Boolean"/>
                                            <enableProductMeta
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                                name="./isProductMetaEnabled"
                                                text="Enable product meta data from DTL"
                                                value="true"/>
                                            <enableProductMetaType
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                                name="./isProductMetaEnabled@TypeHint"
                                                value="Boolean"/>
                                             <enableElabDoc
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                                name="./isElabDocEnabled"
                                                text="Enable elab Doc"
                                                value="true"/>
                                            <enableElabDocForInstrumentsType
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                                name="./isElabDocEnabled@TypeHint"
                                                value="Boolean"/>
                                            <enableElabDocForAssays
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                                name="./isElabDocEnabledForAssays"
                                                text="Enable elab Doc for Assays"
                                                value="true"/>
                                            <enableElabDocForAssaysType
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                                name="./isElabDocEnabledForAssays@TypeHint"
                                                value="Boolean"/>
										</items>
									</webPath>
								</items>
							</column>
						</items>
					</globalTab>
					<metaTab jcr:primaryType="nt:unstructured" jcr:title="Meta Mapping"
						sling:resourceType="granite/ui/components/foundation/section">
						<layout jcr:primaryType="nt:unstructured"
							sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns" />
						<items jcr:primaryType="nt:unstructured">
							<column jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/container">
								<items jcr:primaryType="nt:unstructured">
									<metaAndTag jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/foundation/form/fieldset">
										<items jcr:primaryType="nt:unstructured">
											<metaMapping
												cq:showOnCreate="{Boolean}false"
												jcr:primaryType="nt:unstructured"
												jcr:title="Meta Data and Tags Mapping for SnP"
												sling:resourceType="granite/ui/components/foundation/form/fieldset">
												<items jcr:primaryType="nt:unstructured">
													<metaTagMappings jcr:primaryType="nt:unstructured"
														sling:resourceType="granite/ui/components/foundation/form/multifield"
														class="full-width" fieldDescription="Click '+' to add Mapping"
														fieldLabel="Meta Data and Tags Map">
														<field jcr:primaryType="nt:unstructured"
															sling:resourceType="granite/ui/components/foundation/form/fieldset"
															acs-commons-nested="JSON_STORE" name="./metaTagMap">
															<layout jcr:primaryType="nt:unstructured"
																sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
																method="absolute" />
															<items jcr:primaryType="nt:unstructured">
																<column jcr:primaryType="nt:unstructured"
																	sling:resourceType="granite/ui/components/foundation/container">
																	<items jcr:primaryType="nt:unstructured">
																		<tagPath jcr:primaryType="nt:unstructured"
																			sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
																			rootPath="/etc/tags/customerportal/pim/product/"
																			fieldDescription="Choose the Parent Tag path to be mapped" fieldLabel="Tag Path"
																			name="./tagPath" />
																		<mapValue jcr:primaryType="nt:unstructured"
																			sling:resourceType="granite/ui/components/foundation/form/textfield"
																			fieldDescription="Enter meta map value" fieldLabel="Map Value"
																			name="./metaMap" />
																	</items>
																</column>
															</items>
														</field>
													</metaTagMappings>
												</items>
											</metaMapping>
										</items>
									</metaAndTag>
								</items>
							</column>
						</items>
					</metaTab>
				</items>
			</tabs>
		</items>
	</content>
</jcr:root>
