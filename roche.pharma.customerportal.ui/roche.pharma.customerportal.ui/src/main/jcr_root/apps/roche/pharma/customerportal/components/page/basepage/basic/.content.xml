<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Basic"
    sling:resourceType="granite/ui/components/foundation/section">
    <layout
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
        margin="{Boolean}false"/>
    <items jcr:primaryType="nt:unstructured">
        <column
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/container">
            <items jcr:primaryType="nt:unstructured">
                <title
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Title and Tags"
                    sling:resourceType="granite/ui/components/foundation/form/fieldset">
                    <items jcr:primaryType="nt:unstructured">
                        <pagename
                            cq:hideOnEdit="{Boolean}true"
                            cq:showOnCreate="{Boolean}true"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                            fieldLabel="Name"
                            name="pageName"
                            validation="foundation.jcr.name"/>
                        <title
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            cq-msm-lockable="jcr:title"
                            fieldLabel="Title"
                            name="./jcr:title"
                            renderReadOnly="{Boolean}true"
                            required="{Boolean}true"/>
                        <msmConfigEndpoint
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/hidden"
                            class="msm-config-endpoint"
                            value="${empty param.item ? requestPathInfo.suffix : param.item }"/>
                        <tags
                            cq:showOnCreate="{Boolean}true"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="cq/gui/components/common/tagspicker"
                            allowBulkEdit="{Boolean}true"
                            allowCreate="{Boolean}true"
                            cq-msm-lockable="cq:tags"
                            fieldLabel="Tags"
                            name="./cq:tags"
                            renderReadOnly="{Boolean}true"/>
                        <hideinnav
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/checkbox"
                            allowBulkEdit="{Boolean}true"
                            cq-msm-lockable="hideInNav"
                            name="./hideInNav"
                            renderReadOnly="{Boolean}true"
                            text="Hide in Navigation"
                            value="true"/>
                        <hideinsearch
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/checkbox"
                            allowBulkEdit="{Boolean}true"
                            cq-msm-lockable="hideInSearch"
                            name="./hideInSearch"
                            renderReadOnly="{Boolean}true"
                            text="Hide in Search"
                            value="true"/>
                        <charset
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/hidden"
                            allowBulkEdit="{Boolean}true"
                            ignoreData="{Boolean}true"
                            name="_charset_"
                            value="utf-8"/>
                        <errorPages
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                            fieldDescription="Error pages root path"
                            fieldLabel="Error pages root path"
                            name="./errorPages"
                            rootPath="/content/customerportal"/>
                    </items>
                </title>
                <moretitles
                    cq:showOnCreate="{Boolean}true"
                    jcr:primaryType="nt:unstructured"
                    jcr:title="More Titles and Description"
                    sling:resourceType="granite/ui/components/foundation/form/fieldset">
                    <items jcr:primaryType="nt:unstructured">
                        <pagetitle
                            cq:showOnCreate="{Boolean}true"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                            allowBulkEdit="{Boolean}true"
                            cq-msm-lockable="pageTitle"
                            fieldLabel="Page Title"
                            name="./pageTitle"
                            renderReadOnly="{Boolean}true"/>
                        <navigationtitle
                            cq:showOnCreate="{Boolean}true"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                            allowBulkEdit="{Boolean}true"
                            cq-msm-lockable="navTitle"
                            fieldLabel="Navigation Title"
                            name="./navTitle"
                            renderReadOnly="{Boolean}true"/>
                        <subtitle
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                            allowBulkEdit="{Boolean}true"
                            cq-msm-lockable="subtitle"
                            fieldLabel="Subtitle"
                            name="./subtitle"
                            renderReadOnly="{Boolean}true"/>
                        <description
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/textarea"
                            allowBulkEdit="{Boolean}true"
                            cq-msm-lockable="jcr:description"
                            fieldLabel="Description"
                            name="./jcr:description"
                            renderReadOnly="{Boolean}true"/>
                    </items>
                </moretitles>
                <pageType
                    cq:showOnCreate="{Boolean}true"
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Page type"
                    sling:resourceType="granite/ui/components/foundation/form/fieldset">
                    <items jcr:primaryType="nt:unstructured">
                        <pagetitle
                            cq:showOnCreate="{Boolean}true"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/select"
                            cq-msm-lockable="pageType"
                            fieldLabel="Page Type"
							class="cq-dialog-dropdown-showhide"
							cq-dialog-dropdown-showhide-target=".carousel-option-listfrom-showhide-target"
                            name="./pageType">
                            <items jcr:primaryType="nt:unstructured">
							    <home
                                    jcr:primaryType="nt:unstructured"
                                    text="Home"
                                    value="Home"/>
                                <news
                                    jcr:primaryType="nt:unstructured"
                                    text="News"
                                    value="News"/>
                                <products
                                    jcr:primaryType="nt:unstructured"
                                    text="Products"
                                    value="Products"/>
                                <events
                                    jcr:primaryType="nt:unstructured"
                                    text="Events"
                                    value="Events"/>
								<article
                                    jcr:primaryType="nt:unstructured"
                                    text="Article"
                                    value="Article"/>
                                <career
                                    jcr:primaryType="nt:unstructured"
                                    text="Career"
                                    value="Career"/>
                                <searchResult
                                    jcr:primaryType="nt:unstructured"
                                    text="Search result"
                                    value="srp"/> 
                                <productListing
                                    jcr:primaryType="nt:unstructured"
                                    text="Product listing"
                                    value="plp"/>  
                                <contactUs
                                    jcr:primaryType="nt:unstructured"
                                    text="Contact Us"
                                    value="contact-us"/>            
                                <others
                                    jcr:primaryType="nt:unstructured"
                                    text="Others"
                                    value="Others"/>
                            </items>
                        </pagetitle>
                    </items>
                </pageType>
                <show
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/form/checkbox"
                    name="./isPageTypeDisabled"
                    text="Hide Page Type"
                    value="true"/>
                <pageTypeField
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                    allowBulkEdit="{Boolean}true"
                    cq-msm-lockable="subtitle"
                    fieldLabel="Page Type Text"
                    name="./pageTypeText"
                    renderReadOnly="{Boolean}true"/>
				<publishedDate
					jcr:primaryType="nt:unstructured"
					sling:resourceType="granite/ui/components/foundation/container">
					<items jcr:primaryType="nt:unstructured">
						<publishdate
							jcr:primaryType="nt:unstructured"
							sling:resourceType="granite/ui/components/foundation/form/datepicker"
							displayedFormat="DD.MM.YYYY"
							fieldDescription="Select the News/Article Publish Date"
							fieldLabel="News/Article Publish Date"
							name="./publishedDate"
							type="datetime"/>
					</items>
				</publishedDate>
				<storyType
					jcr:primaryType="nt:unstructured"
					sling:resourceType="granite/ui/components/foundation/container"
					class="carousel-option-listfrom-showhide-target foundation-layout-util-vmargin"
					showhidetargetvalue="Article">
					<items jcr:primaryType="nt:unstructured">
						<story
                            cq:showOnCreate="{Boolean}true"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/select"
                            cq-msm-lockable="storyType"
                            fieldLabel="Story Type"
							name="./storyType">
                            <items jcr:primaryType="nt:unstructured">
							    <connectedLab
                                    jcr:primaryType="nt:unstructured"
                                    text="Connected Lab"
                                    value="connectedLab"/>
                                <bloodManagement
                                    jcr:primaryType="nt:unstructured"
                                    text="Blood Management"
                                    value="bloodManagement"/>
								<infectiousDisease
                                    jcr:primaryType="nt:unstructured"
                                    text="Infectious Disease"
                                    value="infectiousDisease"/>
                                <medicalValue
                                    jcr:primaryType="nt:unstructured"
                                    text="Medical Value"
                                    value="medicalValue"/>
								<pointofCaretesting
                                    jcr:primaryType="nt:unstructured"
                                    text="Point of Care testing"
                                    value="pointofCaretesting"/>
                                <personalizedHealthcare
                                    jcr:primaryType="nt:unstructured"
                                    text="Personalized Healthcare"
                                    value="personalizedHealthcare"/>
								<rmd
                                    jcr:primaryType="nt:unstructured"
                                    text="RMD"
                                    value="RMD"/> 
							</items>
                        </story>
					</items>
				</storyType>
                <onofftime
                    cq:showOnCreate="{Boolean}false"
                    jcr:primaryType="nt:unstructured"
                    jcr:title="On/Off Time"
                    sling:resourceType="granite/ui/components/foundation/form/fieldset">
                    <items jcr:primaryType="nt:unstructured">
                        <ondate
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/datepicker"
                            allowBulkEdit="{Boolean}true"
                            cq-msm-lockable="onTime"
                            displayedFormat="MMMM DD, YYYY hh:mm a"
                            displayTimezoneMessage="{Boolean}true"
                            fieldLabel="On Time"
                            name="./onTime"
                            renderReadOnly="{Boolean}true"
                            type="datetime"/>
                        <ondate_type
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/hidden"
                            allowBulkEdit="{Boolean}true"
                            ignoreData="{Boolean}true"
                            name="./onTime@TypeHint"
                            value="Date"/>
                        <offdate
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/datepicker"
                            allowBulkEdit="{Boolean}true"
                            cq-msm-lockable="offTime"
                            displayedFormat="MMMM DD, YYYY hh:mm a"
                            displayTimezoneMessage="{Boolean}true"
                            fieldLabel="Off Time"
                            name="./offTime"
                            renderReadOnly="{Boolean}true"
                            type="datetime"/>
                        <offdate_type
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/hidden"
                            allowBulkEdit="{Boolean}true"
                            ignoreData="{Boolean}true"
                            name="./offTime@TypeHint"
                            value="Date"/>
                    </items>
                </onofftime>
                <vanityurl
                    cq:showOnCreate="{Boolean}false"
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Vanity URL"
                    sling:resourceType="granite/ui/components/foundation/form/fieldset">
                    <items jcr:primaryType="nt:unstructured">
                        <vanitypath
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/multifield"
                            cq-msm-lockable="sling:vanityPath"
                            fieldLabel="Vanity URL"
                            renderReadOnly="{Boolean}true">
                            <field
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                name="./sling:vanityPath"
                                required="{Boolean}true"/>
                        </vanitypath>
                        <redirectVanityURL
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/checkbox"
                            cq-msm-lockable="./sling:redirect"
                            name="./sling:redirect"
                            renderReadOnly="{Boolean}true"
                            text="Redirect Vanity URL"
                            value="true"/>
                    </items>
                </vanityurl>
				<personatag
                    cq:showOnCreate="{Boolean}false"
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Persona Tags"
                    sling:resourceType="granite/ui/components/foundation/form/fieldset">
                    <items jcr:primaryType="nt:unstructured">
					<tags
                            cq:showOnCreate="{Boolean}true"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="cq/gui/components/common/tagspicker"
                            allowBulkEdit="{Boolean}true"
                            allowCreate="{Boolean}true"
                            cq-msm-lockable="cq:tags"
                            fieldLabel="Tags"
                            name="./personaTags"
							tagsPath="/etc/tags/customerportal/persona"
                            renderReadOnly="{Boolean}true"/>
                       
                    </items>
                </personatag>
                <expirationtime
                    cq:showOnCreate="{Boolean}false"
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Activation/Expiration Time"
                    sling:resourceType="granite/ui/components/foundation/form/fieldset">
                    <items jcr:primaryType="nt:unstructured">
                        <expirationdate
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/datepicker"
                            allowBulkEdit="{Boolean}true"
                            cq-msm-lockable="onTime"
                            displayedFormat="MMMM DD, YYYY hh:mm a"
                            displayTimezoneMessage="{Boolean}true"
                            fieldLabel="Expiration Time"
							fieldDescription="Un-Publication Scheduler will run at 12am every day"
                            name="./expirationTime"
                            renderReadOnly="{Boolean}true"
                            type="datetime"/>
                        <expiration_type
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/hidden"
                            allowBulkEdit="{Boolean}true"
                            ignoreData="{Boolean}true"
                            name="./onTime@TypeHint"
                            value="Date"/>
                        <activationdate
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/datepicker"
                            allowBulkEdit="{Boolean}true"
                            cq-msm-lockable="onTime"
                            displayedFormat="MMMM DD, YYYY hh:mm a"
                            displayTimezoneMessage="{Boolean}true"
                            fieldLabel="Activation Time"
                            name="./activationTime"
                            renderReadOnly="{Boolean}true"
                            type="datetime"/>
                        <activation_type
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/hidden"
                            allowBulkEdit="{Boolean}true"
                            ignoreData="{Boolean}true"
                            name="./onTime@TypeHint"
                            value="Date"/>
                        <isInstantPublish
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/checkbox"
                            name="./isInstantPublish"
                            text="Publish Page immediately after approval"
                            value="true"/>
                    </items>
                </expirationtime>
                <image
                    cq:showOnCreate="{Boolean}false"
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Image"
                    sling:resourceType="granite/ui/components/foundation/form/fieldset">
                    <items jcr:primaryType="nt:unstructured">
                        <imageFile
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/fileupload"
                            allowUpload="{Boolean}false"
                            autoStart="{Boolean}false"
                            class="cq-droptarget"
                            fieldDescription="Upload Image"
                            fieldLabel="Roche Dam asset"
                            fileNameParameter="./image"
                            fileReferenceParameter="./fileReference"
                            mimeTypes="[image]"
                            multiple="{Boolean}false"
                            name="./image"
                            title="Upload Image"
                            uploadUrl="${suffix.path}"
                            useHTML5="{Boolean}true"/>
                        <altText
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                            fieldDescription="Provide a textual alternative of the content and function of the image."
                            fieldLabel="Alternative Text"
                            name="./altText"/>
                    </items>
                </image>
				<pcap
					jcr:primaryType="nt:unstructured"
					sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
					disabled="{Boolean}true"
					fieldLabel="PCAP number"
					name="./pcapNumber"/>
                <comment
					jcr:primaryType="nt:unstructured"
					sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
					disabled="{Boolean}true"
					fieldLabel="Workflow Comment"
					name="./comment"/>
            </items>
        </column>
    </items>
</jcr:root>
