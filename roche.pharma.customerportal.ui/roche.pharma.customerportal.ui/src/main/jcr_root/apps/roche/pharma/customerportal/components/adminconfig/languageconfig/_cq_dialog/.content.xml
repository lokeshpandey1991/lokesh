<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
	xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
	xmlns:nt="http://www.jcp.org/jcr/nt/1.0" jcr:primaryType="nt:unstructured"
	jcr:title="Language configuration" sling:resourceType="cq/gui/components/authoring/dialog">
	<content jcr:primaryType="nt:unstructured"
		sling:resourceType="granite/ui/components/foundation/container">
		<items jcr:primaryType="nt:unstructured">
			<tabs jcr:primaryType="nt:unstructured"
				sling:resourceType="granite/ui/components/foundation/container">
				<layout jcr:primaryType="nt:unstructured"
					sling:resourceType="granite/ui/components/foundation/layouts/tabs"
					type="nav" />
				<items jcr:primaryType="nt:unstructured">
					<globalTab jcr:primaryType="nt:unstructured" jcr:title="Language configuration"
						sling:resourceType="granite/ui/components/foundation/section">
						<layout jcr:primaryType="nt:unstructured"
							sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns" />
						<items jcr:primaryType="nt:unstructured">
							<column jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/container">
								<items jcr:primaryType="nt:unstructured">
									<countrySelector jcr:primaryType="nt:unstructured"
										jcr:title="Country selector configurations"
										sling:resourceType="granite/ui/components/foundation/form/fieldset">
										<items jcr:primaryType="nt:unstructured">
											<path jcr:primaryType="nt:unstructured"
												sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
												fieldDescription="Select path" fieldLabel="Link path"
												name="./countrySelectorPagePath" rootPath="/content" />
										</items>
									</countrySelector>
									<dateFormat jcr:primaryType="nt:unstructured"
										jcr:title="Date format"
										sling:resourceType="granite/ui/components/foundation/form/fieldset">
										<items jcr:primaryType="nt:unstructured">
											<dateFormatPattern jcr:primaryType="nt:unstructured"
												sling:resourceType="granite/ui/components/foundation/form/textfield"
												fieldLabel="Date format" name="./dateFormatPattern" />
										</items>
									</dateFormat>
									<personaSelector jcr:primaryType="nt:unstructured"
										jcr:title="Persona selector configurations"
										sling:resourceType="granite/ui/components/foundation/form/fieldset">
										<items jcr:primaryType="nt:unstructured">
											<path jcr:primaryType="nt:unstructured"
												sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
												fieldDescription="Select path" fieldLabel="Link path"
												name="./personaSelectorPagePath" rootPath="/content" />
											<show jcr:primaryType="nt:unstructured"
												sling:resourceType="granite/ui/components/foundation/form/checkbox"
												name="./isPersonaDisabled" text="Hide persona selector"
												value="true" />
											<showType
											    jcr:primaryType="nt:unstructured"
											    sling:resourceType="granite/ui/components/foundation/form/hidden"
											    name="./isPersonaDisabled@TypeHint"
											    value="Boolean"/>	
										</items>
									</personaSelector>
									<searchPath jcr:primaryType="nt:unstructured"
										jcr:title="Search configurations" sling:resourceType="granite/ui/components/foundation/form/fieldset">
										<items jcr:primaryType="nt:unstructured">
											<path jcr:primaryType="nt:unstructured"
												sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
												fieldDescription="Select path" fieldLabel="Search Result path"
												name="./searchPagePath" rootPath="/content" />
											<url jcr:primaryType="nt:unstructured" required="true"
												sling:resourceType="granite/ui/components/foundation/form/textfield"
												fieldDescription="Search&amp;Promote URL" fieldLabel="Search&amp;Promote URL"
												name="./searchUrl" />	
											<limit jcr:primaryType="nt:unstructured" required="true"
												sling:resourceType="granite/ui/components/foundation/form/textfield"
												fieldDescription="Search result limit" fieldLabel="Search result limit"
												name="./searchLimit" />		
											<collection jcr:primaryType="nt:unstructured" 
												sling:resourceType="granite/ui/components/foundation/form/textfield"
												fieldDescription="Search&amp;Promote Collection" fieldLabel="Collection Name"
												name="./searchCollection" />			
										</items>
									</searchPath>
									<relatedProductsSearchPagePath jcr:primaryType="nt:unstructured"
										jcr:title="Related Products Search configurations" sling:resourceType="granite/ui/components/foundation/form/fieldset">
										<items jcr:primaryType="nt:unstructured">
											<path jcr:primaryType="nt:unstructured"
												sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
												fieldDescription="Select path" fieldLabel="Related Products Search Result path"
												name="./relatedProductsSearchPagePath" rootPath="/content" />
										</items>
									</relatedProductsSearchPagePath>
									<social jcr:primaryType="nt:unstructured" jcr:title="Social links"
										sling:resourceType="granite/ui/components/foundation/form/fieldset">
										<layout jcr:primaryType="nt:unstructured"
											sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns" />
										<items jcr:primaryType="nt:unstructured">
											<column jcr:primaryType="nt:unstructured"
												sling:resourceType="granite/ui/components/foundation/container">
												<items jcr:primaryType="nt:unstructured">
													<socialLinks jcr:primaryType="nt:unstructured"
														sling:resourceType="granite/ui/components/foundation/form/multifield"
														class="full-width" fieldDescription="Click '+' to add a new link"
														fieldLabel="Social Media Links">
														<field jcr:primaryType="nt:unstructured"
															sling:resourceType="granite/ui/components/foundation/form/fieldset"
															acs-commons-nested="JSON_STORE" name="./socialLinks">
															<layout jcr:primaryType="nt:unstructured"
																sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
																method="absolute" />
															<items jcr:primaryType="nt:unstructured">
																<column jcr:primaryType="nt:unstructured"
																	sling:resourceType="granite/ui/components/foundation/container">
																	<items jcr:primaryType="nt:unstructured">
																		<page jcr:primaryType="nt:unstructured"
																			sling:resourceType="granite/ui/components/foundation/form/select"
																			fieldLabel="Select media type" name="./socialMediaOption">
																			<items jcr:primaryType="nt:unstructured">
																				<facebook jcr:primaryType="nt:unstructured"
																					text="facebook" value="facebook" />
																				<twitter jcr:primaryType="nt:unstructured"
																					text="twitter" value="twitter" />
																				<instagram jcr:primaryType="nt:unstructured"
																					text="linkedin" value="linkedin" />
																				<youtube jcr:primaryType="nt:unstructured"
																					text="youtube" value="youtube" />
																				<wechat jcr:primaryType="nt:unstructured"
																					text="wechat" value="wechat" />
																				<kakoastory jcr:primaryType="nt:unstructured"
																					text="kakoastory" value="kakoastory" />		
																			</items>
																		</page>
																		<path jcr:primaryType="nt:unstructured"
																			sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
																			fieldDescription="Select path" fieldLabel="Link Path"
																			name="./socialLink" rootPath="/content/customerportal" />
																	</items>
																</column>
															</items>
														</field>
													</socialLinks>
												</items>
											</column>
										</items>
									</social>
									 <fromEmail
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                                        fieldDescription="Provide the &quot;from&quot; Email address to be used in emails."
                                        fieldLabel="From Email"
                                        name="./fromEmail"/>
                                     <disableCaptcha
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                        name="./isCaptchaDisabled"
                                        text="Disable Captcha"
                                        value="true"/>
                                    <disableCaptchaType
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/hidden"
                                        name="./isCaptchaDisabled@TypeHint"
                                        value="Boolean"/>   
                                     <cookieDisclaimerLink
                                        jcr:primaryType="nt:unstructured"
										jcr:title="Cookie disclaimer link configuration"
										sling:resourceType="granite/ui/components/foundation/form/fieldset">
										<items jcr:primaryType="nt:unstructured">
											<path jcr:primaryType="nt:unstructured"
												sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
												fieldDescription="Select path" fieldLabel="Link path"
												name="./cookieDisclaimerLink" rootPath="/content" />
											<show jcr:primaryType="nt:unstructured"
												sling:resourceType="granite/ui/components/foundation/form/checkbox"
												name="./isCookieNotificationDisabled" text="Hide Cookie Disclaimer Notification"
												value="true" />
											<showType
											    jcr:primaryType="nt:unstructured"
											    sling:resourceType="granite/ui/components/foundation/form/hidden"
											    name="./isCookieNotificationDisabled@TypeHint"
											    value="Boolean"/>	
										</items>
                                        </cookieDisclaimerLink>
										<categorytag
											jcr:primaryType="nt:unstructured"
											sling:resourceType="cq/gui/components/common/tagspicker"
											fieldDescription="Select the top category tags"
											fieldLabel="Top Category Tags"
											name="./topFacetTags"
											tagsPath="/etc/tags/customerportal/pim"/>
								</items>
							</column>
						</items>
					</globalTab>
					<socialShareTab jcr:primaryType="nt:unstructured" 
					                jcr:title="Social Media configuration"
									sling:resourceType="granite/ui/components/foundation/section">
							<layout jcr:primaryType="nt:unstructured"
								    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns" />
							<items jcr:primaryType="nt:unstructured">
								<column jcr:primaryType="nt:unstructured"
									sling:resourceType="granite/ui/components/foundation/container">
									<items jcr:primaryType="nt:unstructured">
										<social jcr:primaryType="nt:unstructured"
								                jcr:title="Social media configuration" 
								                sling:resourceType="granite/ui/components/foundation/form/fieldset">
												<items jcr:primaryType="nt:unstructured">
												   <shareId jcr:primaryType="nt:unstructured"
															 sling:resourceType="granite/ui/components/foundation/form/textfield"
														     fieldDescription="Enter social media share id" fieldLabel="Share id"
															 name="./shareId" />
													<socialShareLinks
															 jcr:primaryType="nt:unstructured"
															 sling:resourceType="granite/ui/components/foundation/form/select"
															 fieldLabel="Social links"
															 multiple="{Boolean}true"
															 deleteHint="{Boolean}true"
															 emptyText="Please Select"
															 name="./socialShareLinks">
																<items jcr:primaryType="nt:unstructured">
																    <facebook 
																	     jcr:primaryType="nt:unstructured"
																		 text="Facebook"
																	     value="facebook" />
																	<linkedin 
																	     jcr:primaryType="nt:unstructured"
																		 text="Linked in"
																	     value="linkedin" />
																	<twitter 
																	    jcr:primaryType="nt:unstructured"
																		text="Twitter"
																		value="twitter" />
																	<email 
																	    jcr:primaryType="nt:unstructured"
																		text="Email"
																		value="email" />	
																</items>
													</socialShareLinks>
												</items>
							        </social>
								 </items>
								</column>
							</items>
						</socialShareTab>
				</items>
			</tabs>
		</items>
	</content>
</jcr:root>
