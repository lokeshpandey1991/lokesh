<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Media Contianer"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem6_2_docs_component_en#Image - Sightly"
    width="800">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <image
                jcr:primaryType="nt:unstructured"
                jcr:title="Roche Asset Details"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <mediaContianer
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/fileupload"
                                allowUpload="{Boolean}false"
                                autoStart="{Boolean}false"
                                class="cq-droptarget"
                                fieldDescription="Upload Image"
                                fieldLabel="Roche Dam asset"
                                fileNameParameter="./mediaContainer"
                                fileReferenceParameter="./fileReference"
                                mimeTypes="[image,video/.*]"
                                multiple="{Boolean}false"
                                name="./mediaContainer"
                                title="Upload Image Asset"
                                uploadUrl="${suffix.path}"
                                useHTML5="{Boolean}true"/>
                            <altText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Provide a textual alternative of the content and function of the image."
                                fieldLabel="Alternative Text"
                                name="./altText"/>
                            <transparentOverlay
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldDescription="Please select if a transparent overlay for the image is required"
                                fieldLabel="Transparent Overlay"
                                name="./transparentOverlay">
                                <items jcr:primaryType="nt:unstructured">
                                    <false
                                        jcr:primaryType="nt:unstructured"
                                        text="False"
                                        value="false"/>
                                    <true
                                        jcr:primaryType="nt:unstructured"
                                        text="True"
                                        value="true"/>
                                </items>
                            </transparentOverlay>
                        </items>
                    </column>
                </items>
            </image>
            <text
                jcr:primaryType="nt:unstructured"
                jcr:title="Text Parameters"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <headline
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Provide the headline text"
                                fieldLabel="Headline text"
                                name="./headline"
                                required="{Boolean}true"/>
                            <subHeadline
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Provide the sub-headline text"
                                fieldLabel="Sub-Headline text"
                                name="./subHeadline"
                                required="{Boolean}true"/>
                            <ctaLabel
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Provide the label for call to action.keep blank for making image clickable"
                                fieldLabel="CTA Label"
                                name="./ctaLabel"/>
                            <ctaLink
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                fieldDescription="Configure  Call to action link"
                                fieldLabel="CTA Link"
                                name="./ctaLink"
                                rootPath="/content/customerportal"/>
                            <quoteText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                fieldLabel="Quote text"
                                name="./quoteText"
                                useFixedInlineToolbar="{Boolean}true"
                                validateEvent="{Boolean}true"
                                validateValue="function(field){&#xa;var temp=this.getValue();&#xa; if(temp.length>300){&#xa;this.markInvalid(&quot;Text should not exceed 300 characters&quot;);&#xa;return false;&#xa;}else{&#xa;this.clearInvalid();&#xa;return true;&#xa;}&#xa;}">
                                <uiSettings jcr:primaryType="nt:unstructured">
                                    <cui jcr:primaryType="nt:unstructured">
                                        <inline
                                            jcr:primaryType="nt:unstructured"
                                            toolbar="[format#bold,format#italic,format#underline,#paraformat,image#imageProps,#justify,#lists,links#modifylink,links#unlink,#styles]">
                                            <popovers jcr:primaryType="nt:unstructured">
                                                <justify
                                                    jcr:primaryType="nt:unstructured"
                                                    items="[justify#justifyleft,justify#justifycenter,justify#justifyright]"
                                                    ref="justify"/>
                                                <lists
                                                    jcr:primaryType="nt:unstructured"
                                                    items="[lists#unordered,lists#ordered,lists#outdent,lists#indent]"
                                                    ref="lists"/>
                                                <styles
                                                    jcr:primaryType="nt:unstructured"
                                                    items="styles:getStyles:styles-pulldown"
                                                    ref="styles"/>
                                                <paraformat
                                                    jcr:primaryType="nt:unstructured"
                                                    items="paraformat:getFormats:paraformat-pulldown"
                                                    ref="paraformat"/>
                                            </popovers>
                                        </inline>
                                    </cui>
                                </uiSettings>
                                <rtePlugins jcr:primaryType="nt:unstructured">
                                    <image
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <justify
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <styles
                                        jcr:primaryType="nt:unstructured"
                                        features="*">
                                        <styles jcr:primaryType="cq:WidgetCollection">
                                            <quote
                                                jcr:primaryType="nt:unstructured"
                                                cssName="quote"
                                                text="quote"/>
                                        </styles>
                                    </styles>
                                    <paraformat
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                </rtePlugins>
                            </quoteText>
                            <textPosition
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldDescription="Provide a position for the text on the image"
                                fieldLabel="text Position"
                                name="./textPosition">
                                <items jcr:primaryType="nt:unstructured">
                                    <lefInsideImage
                                        jcr:primaryType="nt:unstructured"
                                        text="Left inside image"
                                        value="leftInsideImage"/>
                                    <rightInsideImage
                                        jcr:primaryType="nt:unstructured"
                                        text="Right inside image"
                                        value="rightInsideImage"/>
                                    <leftOutsideImage
                                        jcr:primaryType="nt:unstructured"
                                        text="Left outside image"
                                        value="leftOutsideImage"/>
                                    <rightOutsideImage
                                        jcr:primaryType="nt:unstructured"
                                        text="Right outside image"
                                        value="rightOutsideImage"/>
                                </items>
                            </textPosition>
                            <view
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                disabled="{Boolean}true"
                                fieldDescription="Image view configuration. Set automatically based on variation type and text possition"
                                fieldLabel="View"
                                name="./view"/>
                            <variationType
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                class="hide"
                                name="./variationType"
                                value="mediaContainer"/>
                        </items>
                    </column>
                </items>
            </text>
        </items>
    </content>
</jcr:root>
