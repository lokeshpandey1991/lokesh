<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Product Thumbnail Details"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            margin="{Boolean}false"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <details1
                jcr:primaryType="nt:unstructured"
                jcr:title="Product Details1"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <productpath
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                fieldDescription="Browse the Product path"
                                fieldLabel="Product Path"
                                name="./productPath1"
                                rootPath="/content/customerportal"/>
                            <image
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/fileupload"
                                allowUpload="{Boolean}false"
                                autoStart="{Boolean}false"
                                class="cq-droptarget"
                                fieldDescription="Upload Image Asset(Mandatory) or to override the existing product(Optional)"
                                fieldLabel="Roche Dam asset"
                                fileNameParameter="./image1"
                                fileReferenceParameter="./fileReference1"
                                mimeTypes="[image]"
                                multiple="{Boolean}false"
                                name="./image1"
                                uploadUrl="${suffix.path}"
                                useHTML5="{Boolean}true"/>
                            <altText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Provide a textual alternative (Mandatory) or to override the existing product(Optional)"
                                fieldLabel="Alternative Text"
                                name="./altText1"/>
                            <producttitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Provide the title for Product (Mandatory) or to override the existing product(Optional)"
                                fieldLabel="Product Title"
                                name="./productTitle1"/>
                            <tags
                                cq:showOnCreate="{Boolean}true"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/common/tagspicker"
								fieldDescription="Select the Tags (Mandatory) or to override the existing product(Optional)"
                                allowBulkEdit="{Boolean}true"
                                allowCreate="{Boolean}true"
                                cq-msm-lockable="cq:tags"
                                fieldLabel="Tags"
                                name="./tagsId1"
                                renderReadOnly="{Boolean}false"
                                tagsPath="/etc/tags/customerportal"/>
                        </items>
                    </column>
                </items>
            </details1>
            <details2
                jcr:primaryType="nt:unstructured"
                jcr:title="Product Details2"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <productpath
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                fieldDescription="Browse the Product path"
                                fieldLabel="Product Path"
                                name="./productPath2"
                                rootPath="/content/customerportal"/>
                            <image
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/fileupload"
                                allowUpload="{Boolean}false"
                                autoStart="{Boolean}false"
                                class="cq-droptarget"
                                fieldDescription="Upload Image Asset(Mandatory) or to override the existing product(Optional)"
                                fieldLabel="Roche Dam asset"
                                fileNameParameter="./image2"
                                fileReferenceParameter="./fileReference2"
                                mimeTypes="[image]"
                                multiple="{Boolean}false"
                                name="./image2"
                                uploadUrl="${suffix.path}"
                                useHTML5="{Boolean}true"/>
                            <altText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Provide a textual alternative (Mandatory) or to override the existing product(Optional)"
                                fieldLabel="Alternative Text"
                                name="./altText2"/>
                            <producttitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Provide the title for Product (Mandatory) or to override the existing product(Optional)"
                                fieldLabel="Product Title"
                                name="./productTitle2"/>
                            <tags
                                cq:showOnCreate="{Boolean}true"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/common/tagspicker"
								fieldDescription="Select the Tags (Mandatory) or to override the existing product(Optional)"
                                allowBulkEdit="{Boolean}true"
                                allowCreate="{Boolean}true"
                                cq-msm-lockable="cq:tags"
                                fieldLabel="Tags"
                                name="./tagsId2"
                                renderReadOnly="{Boolean}false"
                                tagsPath="/etc/tags/customerportal"/>
                        </items>
                    </column>
                </items>
            </details2>
        </items>
    </content>
</jcr:root>
