<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured">
    <items jcr:primaryType="nt:unstructured">
        <form
            granite:rel="cq-common-createworkflowdialog-form"
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/form"
            action="/etc/workflow/instances"
            style="vertical">
            <granite:data
                jcr:primaryType="nt:unstructured"
                errormessage="Cannot start workflow on this page."/>
            <items jcr:primaryType="nt:unstructured">
                <charset
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/form/hidden"
                    name="_charset_"
                    value="utf-8"/>
                <payloadtype
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                    ignoreData="{Boolean}true"
                    name="payloadType"
                    value="JCR_PATH"/>
                <model
                    granite:rel="cq-custom-toolbar-actions-workflow-select"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                    emptyText="Select a Workflow Model"
                    ignoreData="{Boolean}true"
                    name="model">
                    <datasource
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="cq/gui/components/coral/common/admin/timeline/events/workflow/datasources/models"/>
                </model>
                <workflowtitle
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                    emptyText="Enter title of workflow"
                    ignoreData="{Boolean}true"
                    name="workflowTitle"/>
                <pcapnumber
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="roche/pharma/customerportal/components/textfield"
                    emptyText="Enter PCAP number"
                    ignoreData="{Boolean}true"
                    name="pcapNumber"
                    required="{Boolean}true"/>
            </items>
        </form>
    </items>
</jcr:root>
